.sidebar
	position fixed
	top 0
	right -100%
	bottom 0
	width 100%
	height 100%
	padding rem(40px) 0 0
	background-color $black
	text-align center
	transition $transition
	z-index 9000000000
	@media(max-height 420px)
		padding rem(20) 0 0
	.sidebar-btn-close
		left 0
		line-height rem(60px)
	h2
		margin 0 0 rem(30px)
		color $yellow
		text-transform uppercase
		letter-spacing rem(2px)
	.site-menu-link
		padding rem(20px) 0
		width 100%			
		@media(max-height 420px)
			padding rem(10px) 0
	&.slide-sidebar
		transform translate3d(-100%, 0, 0)